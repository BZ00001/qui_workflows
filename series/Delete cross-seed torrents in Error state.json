{
  "name": "Delete cross-seed torrents in Error state",
  "trackerPattern": "*",
  "trackerDomains": [
    "*"
  ],
  "conditions": {
    "schemaVersion": "1",
    "delete": {
      "enabled": true,
      "mode": "deleteWithFilesPreserveCrossSeeds",
      "condition": {
        "operator": "AND",
        "conditions": [
          {
            "field": "STATE",
            "operator": "EQUAL",
            "value": "errored"
          },
          {
            "field": "STATE",
            "operator": "NOT_EQUAL",
            "value": "tracker_down"
          },
          {
            "field": "ADDED_ON_AGE",
            "operator": "GREATER_THAN_OR_EQUAL",
            "value": "1800"
          },
          {
            "field": "TAGS",
            "operator": "EQUAL",
            "value": "cross-seed"
          }
        ]
      }
    }
  }
}